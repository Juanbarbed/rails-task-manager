<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to "Add a new task", tasks_new_path %>

<% @tasks.each do |task| %>
  <h1><%= task.title %></h1>
  <%= link_to task.title, task_path(task.id) %>
  <%= link_to "destroy now!", task_path(task), method: :delete, data: {confirm: 'are you sure?'} %>
<% end %>

